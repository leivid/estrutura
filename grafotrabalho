#include <iostream>
#include <windows.h>
#include <stdio.h>


using namespace std;

int m[6][6];
char adjacencias[6] = {'A','B','C','D','E','F',};

int Verifica(int valorA, int valorB)
{
    for(int i =0; i < 6; i++)
    {
        for(int j =0; j < 6; j++)
        {
            if(i == valorA  && j == valorB and m[i][j] != 0)
            {
                printf("\nExiste  adjacencia m[%d][%d] = %d",i,j,m[i][j]);
                return 1;
            }
        }
    }
    return 0;
}

void InicializaMatriz()
{
    for(int i =0; i < 6; i++)
    {
        for(int j =0; j < 6; j++)
        {
            m[i][j] = 0;
        }
    }

    m[0][1] = 10;
    m[0][6] = 9;
    m[1][0] = 10;
    m[1][2] = 15;
    m[1][3] = 8;
    m[2][1] = 15;
    m[2][3] = 12;
    m[2][4] = 17;
    m[3][1] = 8;
    m[3][2] = 12;
    m[4][2] = 17;
    m[4][5] = 3;
    m[5][0] = 9;
    m[5][4] = 3;
}

void imprimeMatriz()
{
    for(int j =0; j < 6; j++)
    {

        printf("   %c ",adjacencias[j]);

    }
    for(int i =0; i < 6; i++)
    {
        printf("\n");
        printf(" %c ",adjacencias[i]);

        for(int j =0; j < 6; j++)
        {

            printf(" %d  ",m[i][j]);

        }
    }
}
int main()
{
    int v1,v2, resultado;
    int sair;
    InicializaMatriz();

    system("cls");

    imprimeMatriz();

    if(resultado == 0)
    {
        printf("\nNao foi encontrado nenhuma  adjacencia.");
    }

    printf("\npara sair digite 0 ou 1 para continuar.");
    scanf("%d",&sair);



    return 0;
}
